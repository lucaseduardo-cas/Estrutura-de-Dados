{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar e Executar (WSL - output)",
      "type": "shell",
      "command": "wsl",
      "args": [
        "bash",
        "-c",
        "mkdir -p output && g++ -Wall -Wextra -g -o output/${fileBasenameNoExtension} ${file} && ./output/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
